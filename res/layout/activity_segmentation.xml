<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/segmentation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegmentationActivity" >

    <ImageView
        android:id="@+id/imageViewSegmentation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageButton
        android:id="@+id/imgBtnDoneSegmentation"
		android:onClick="onDoneSegmentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_btn_done" />

    <ImageButton
        android:id="@+id/imgBtnCancelSegmentation"
        android:onClick="onCancelSegmentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_btn_cancel" />

</RelativeLayout>
